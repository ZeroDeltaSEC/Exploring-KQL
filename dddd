    "chat.openai.com", "AI Chat", "ChatGPT",
    "chatgpt.com", "AI Chat", "ChatGPT",
    "gemini.google.com", "AI Chat", "Google Gemini",
    "canva.com", "Design AI", "Canva",
    "adcreative.ai", "Marketing AI", "AdCreative.ai",
    "designs.ai", "Design AI", "Designs.ai",
