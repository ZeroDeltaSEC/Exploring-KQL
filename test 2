let TargetAccount = "windowsadmin";
CyberArkVault_CL            // sau CommonSecurityLog, după caz
| where AccountName_s == TargetAccount
| where EventType_s in ("PasswordAccessGranted", "PasswordRequest", "SessionStart")   // filtrează tipurile relevante
| project TimeGenerated,
          CyberArkUser          = tostring(User_s),      // utilizatorul CyberArk (cine a cerut parola)
          AccountName           = AccountName_s,
          SourceIP              = tostring(SourceIP_s),
          TicketID              = tostring(TicketId_s),  // change-/service-ticket, dacă există
          DeviceAction_s
| sort by TimeGenerated desc