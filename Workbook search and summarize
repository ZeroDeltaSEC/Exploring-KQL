let searchText = tolower("{Search}");

// Batch 1
let batch1 = union withsource=_SourceTable 
    AADManagedIdentitySignInLogs,
    AADNonInteractiveUserSignInLogs,
    AADProvisioningLogs,
    AADRiskyUsers,
    AADServicePrincipalSignInLogs,
    AADUserRiskEvents,
    AWSCloudTrail,
    AlertEvidence,
    AlertInfo,
    Anomalies
| where tostring(pack_all()) contains searchText
| project _SourceTable, TimeGenerated;

// Batch 2
let batch2 = union withsource=_SourceTable 
    ApacheHTTPServer_CL,
    AppExceptions,
    AppMetrics,
    AppPerformanceCounters,
    AppRequests,
    AppTraces,
    AuditLogs,
    Audits_Data_CL,
    AzureMetrics,
    BehaviorAnalytics
| where tostring(pack_all()) contains searchText
| project _SourceTable, TimeGenerated;

// Batch 3
let batch3 = union withsource=_SourceTable 
    CloudAppEvents,
    CommonSecurityLog,
    Detections_Data_CL,
    DeviceEvents,
    DeviceFileCertificateInfo,
    DeviceFileEvents,
    DeviceImageLoadEvents,
    DeviceInfo,
    DeviceLogonEvents,
    DeviceNetworkEvents
| where tostring(pack_all()) contains searchText
| project _SourceTable, TimeGenerated;

// Batch 4
let batch4 = union withsource=_SourceTable 
    DeviceNetworkInfo,
    DeviceProcessEvents,
    DeviceRegistryEvents,
    EmailAttachmentInfo,
    EmailEvents,
    EmailPostDeliveryEvents,
    EmailUrlInfo,
    Entities_Data_CL,
    Entity_Scoring_Data_CL,
    ForcepointDLPEvents_CL
| where tostring(pack_all()) contains searchText
| project _SourceTable, TimeGenerated;

// Batch 5
let batch5 = union withsource=_SourceTable 
    Health_Data_CL,
    Heartbeat,
    IdentityDirectoryEvents,
    IdentityInfo,
    IdentityLogonEvents,
    IdentityQueryEvents,
    MDCFileIntegrityMonitoringEvents,
    MicrosoftGraphActivityLogs,
    OfficeActivity,
    Operation
| where tostring(pack_all()) contains searchText
| project _SourceTable, TimeGenerated;

// Batch 6
let batch6 = union withsource=_SourceTable 
    PingFederate_CL,
    SecurityAlert,
    SecurityEvent,
    SecurityIncident,
    SecurityScorecardFactor_CL,
    SecurityScorecardIssues_CL,
    SecurityScorecardRatings_CL,
    SigninLogs,
    Syslog,
    ThreatIntelIndicators
| where tostring(pack_all()) contains searchText
| project _SourceTable, TimeGenerated;

// Batch 7
let batch7 = union withsource=_SourceTable 
    ThreatIntelligenceIndicator,
    UrlClickEvents,
    Usage,
    UserPeerAnalytics,
    W3CIISLog,
    ZimperiumMitigationLog_CL,
    ZimperiumThreatLog_CL,
    Zscaler_CL,
    agari_apdpolicy_log_CL,
    agari_apdtc_log_CL
| where tostring(pack_all()) contains searchText
| project _SourceTable, TimeGenerated;

// Batch 8
let batch8 = union withsource=_SourceTable 
    agari_investigation_log_CL,
    file_data_CL,
    globalprotect_CL,
    hipmatch_CL,
    system_CL,
    threat_CL,
    traffic_CL,
    url_CL,
    userid_CL
| where tostring(pack_all()) contains searchText
| project _SourceTable, TimeGenerated;

// Combinare È™i sumarizare
union batch1, batch2, batch3, batch4, batch5, batch6, batch7, batch8
| summarize Count = count(), LastSeen = max(TimeGenerated) by _SourceTable
| order by Count desc